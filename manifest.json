{
    "name": "@deskpro-apps/productboard",
    "title": "ProductBoard",
    "description": "App for ProductBoard",
    "version": "0.0.20",
    "scope": "agent",
    "isSingleInstall": false,
    "hasDevMode": true,
    "targets": [
        {
            "target": "ticket_sidebar",
            "entrypoint": "index.html"
        }
    ],
    "settings": {
        "client_id": {
            "title": "Client ID",
            "type": "string",
            "isRequired": true,
            "isBackendOnly": false,
            "order": 10
        },
        "client_secret": {
            "title": "Client Secret",
            "type": "string",
            "isRequired": true,
            "isBackendOnly": false,
            "order": 20
        },
        "callback_url": {
            "title": "Callback URL",
            "type": "app_embedded",
            "options": {
                "entrypoint": "#/admin/callback"
            },
            "isRequired": false,
            "isBackendOnly": true,
            "order": 30
        }
    },
    "proxy": {
        "whitelist": [
            {
                "url": "https://app.productboard.com/.*",
                "methods": [
                    "GET",
                    "POST"
                ],
                "timeout": 20
            },
            {
                "url": "https://api.productboard.com/.*",
                "methods": [
                    "GET",
                    "POST"
                ],
                "timeout": 20
            }
        ]
    }
}