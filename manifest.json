{
  "name": "@deskpro-apps/productboard",
  "title": "Productboard",
  "description": "Manage your features in Productboard and seamlessly link them to tickets.",
  "version": "0.0.22",
  "scope": "agent",
  "isSingleInstall": false,
  "hasDevMode": true,
  "secrets": "",
  "targets": [
    {
      "target": "ticket_sidebar",
      "entrypoint": "index.html"
    }
  ],
  "settings": {
    "use_advanced_connect": {
      "title": "Advanced Connect",
      "description": "Follow the setup guide and use your credentials to connect the app to Deskpro",
      "type": "boolean",
      "isRequired": false,
      "isBackendOnly": false,
      "default": false,
      "order": 1
    },
    "client_id": {
      "title": "Client ID",
      "type": "string",
      "isRequired": false,
      "isBackendOnly": false,
      "condition": "settings.use_advanced_connect != false",
      "order": 2
    },
    "client_secret": {
      "title": "Client Secret",
      "type": "string",
      "isRequired": false,
      "isBackendOnly": true,
      "condition": "settings.use_advanced_connect != false",
      "order": 3
    },
    "callback_url": {
      "title": "Callback URL",
      "type": "app_embedded",
      "options": {
        "entrypoint": "#/admin/callback",
        "height": "100px"
      },
      "isRequired": false,
      "isBackendOnly": false,
      "condition": "settings.use_advanced_connect != false",
      "order": 4
    }
  },
  "entityAssociations": {
    "linked_productboard_items": {
      "entity": "ticket",
      "type": "external_id",
      "title": "Linked Productboard Items"
    }
  },
  "proxy": {
    "whitelist": [
      {
        "url": "https://app.productboard.com/.*",
        "methods": [
          "GET",
          "POST"
        ],
        "timeout": 20
      },
      {
        "url": "https://api.productboard.com/.*",
        "methods": [
          "GET",
          "POST"
        ],
        "timeout": 20
      }
    ]
  }
}